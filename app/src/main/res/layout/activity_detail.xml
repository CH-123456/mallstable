<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.techaction.mall.ui.DetailActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryBlue"
        android:layout_height="wrap_content"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="#fff"
        app:theme="@style/ToolbarTheme">

    </android.support.v7.widget.Toolbar>
    <!--底部菜单-->
    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/detail_product_top_background"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/buy_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="购买"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/big_font"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:textColor="@color/colorWhite"
            android:background="@color/buy_bg_color"
          />
        <TextView
            android:id="@+id/cart_btn"
            android:layout_toLeftOf="@id/buy_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="加入购物车"
            android:textSize="@dimen/big_font"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:textColor="@color/colorWhite"
            android:background="@color/cart_bg_color"
            />

            <TextView
                android:id="@+id/share_btn"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:paddingTop="5dp"
                android:layout_marginLeft="10dp"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:drawableTop="@mipmap/share_btn"
                android:text="分享"/>

    </RelativeLayout>
    <!--上部详情-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom"
        android:layout_below="@id/toolbar"
        android:scrollbars="none"
        android:descendantFocusability="blocksDescendants"> <!--父类焦点覆盖子类焦点-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_url"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="260dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/detail_product_info_background"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="发送机"
                    android:textColor="@color/font_color_dark"
                    android:textSize="@dimen/big_font" />
                <TextView
                    android:id="@+id/parts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="配件类型：发送机"
                    android:textColor="@color/font_color"
                    android:textSize="@dimen/normal_font" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/price"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="$2222"
                        android:textColor="@color/font_color_red"
                        android:textSize="@dimen/bigger_font" />
                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="库存：1"
                        android:textColor="@color/font_color_red"
                        android:textSize="@dimen/bigger_font" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/btn_jia"
                        android:layout_alignParentRight="true"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@drawable/detail_product_num_a_background"
                        android:gravity="center"
                        android:text="+"/>
                    <EditText
                        android:layout_toLeftOf="@id/btn_jia"
                        android:id="@+id/edit_num"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:background="@drawable/detail_product_num_background"
                        android:text="1"/>
                    <TextView
                        android:id="@+id/btn_jian"
                        android:layout_toLeftOf="@id/edit_num"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@drawable/detail_product_num_j_background"
                        android:gravity="center"
                        android:text="-"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@drawable/detail_product_info_background"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/bigger_font"
                    android:textColor="@color/font_color_hot_title"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="图文详情"/>
                <WebView
                    android:id="@+id/product_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </WebView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
