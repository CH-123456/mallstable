<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_home_hot_list_item_background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/detail_product_bottom_background"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="ddddd_name"
                android:textColor="@color/font_color_dark"/>

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="ddddd_mobile"
                android:textColor="@color/font_color_dark"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/addr_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_container"
            android:layout_marginTop="10dp"
            android:text="ddddd_detail"
            android:textColor="@color/font_color"/>
    </LinearLayout>
    
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <CheckBox
            android:id="@+id/chk_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:background="@drawable/black_background"/>
        <TextView
            android:layout_toRightOf="@id/chk_default"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:text="设为默认"/>
        <TextView
            android:id="@+id/btn_del"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="删除"/>
    </RelativeLayout>
</LinearLayout>